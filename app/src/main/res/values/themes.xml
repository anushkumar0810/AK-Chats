<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AKChats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/dark_blue</item>
    </style>

    <style name="Theme.AKChats" parent="Base.Theme.AKChats" />

    <style name="RoundedImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CornerImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="ThemeAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/popupColor</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:colorAccent">@color/dark_blue</item>
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>